<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="co.com.zoomathias.zoomathias">

    <application
            android:allowBackup="true"
            android:icon="@drawable/main_character"
            android:label="@string/app_name"
            android:roundIcon="@drawable/main_character"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SplashActivity"
                android:screenOrientation="landscape"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".HomeActivity"
                android:screenOrientation="landscape"
                android:theme="@style/HomeTheme"></activity>
        <activity
                android:name=".CountActivity"
                android:screenOrientation="landscape"
                android:theme="@style/BackgroundSky"></activity>
        <activity android:name=".ShopActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>