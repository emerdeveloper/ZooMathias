<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/img_hand"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="30dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/hand_number_four" />

    <ImageView
            android:id="@+id/img_hand2"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_hand"
            app:srcCompat="@drawable/hand_number_one" />

    <ImageView
            android:id="@+id/img_number"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/img_hand2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/number_four" />

    <View
            android:id="@+id/guideline3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_hand"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/animal_recognize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/animal_r_kangaroo" />

    <TextView
            android:id="@+id/labelAnimalName"
            style="@style/FontNunitoExtraBoldBlackBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canguro"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="@+id/animal_recognize"
            app:layout_constraintStart_toEndOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/animal_recognize" />



</androidx.constraintlayout.widget.ConstraintLayout>