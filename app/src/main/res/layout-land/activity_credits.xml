<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/img_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background_sky" />

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/ic_return"
            android:id="@+id/img_return"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"/>

    <TextView
            android:id="@+id/textView"
            style="@style/FontNunitoExtraBoldBlackBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:text="Recursos grÃ¡ficos tomados de los siguientes sitios web"
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_return" />

    <LinearLayout
            android:id="@+id/container_first_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

        <View
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shadow_background" />

        <TextView
                style="@style/FontNunitoExtraBoldBlackBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vecteezy"
                android:textAlignment="center"
                android:textSize="23dp" />
    </LinearLayout>

    <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_first_page" />

    <LinearLayout
            android:id="@+id/container_second_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1">

        <View
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shadow_background" />

        <TextView
                style="@style/FontNunitoExtraBoldBlackBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Freepik"
                android:textAlignment="center"
                android:textSize="23dp" />
    </LinearLayout>

    <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_second_page" />

    <LinearLayout
            android:id="@+id/container_third_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2">

        <View
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shadow_background" />

        <TextView
                style="@style/FontNunitoExtraBoldBlackBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LottieFiles"
                android:textAlignment="center"
                android:textSize="23dp" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_third_page" />


</androidx.constraintlayout.widget.ConstraintLayout>